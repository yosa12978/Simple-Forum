@model simple_Forum.Models.Post
@{
    ViewData["Title"] = Model.title;
}

<div class="alert alert-secondary" style="border-radius: 0px; border-color:white;">
    <h3 style="word-wrap: break-word">@Html.DisplayFor(model => model.title)</h3>

</div>
    <div>

        <div class="alert alert-secondary mt-0" style="border-radius: 0px; border-color:white; ">
            <img src="@Html.DisplayFor(model => model.Author.icon)" style="width:100px; height:100px;" />
            <p>@Html.DisplayFor(model => model.createDate) - <a href="/Account/?name=@Html.DisplayFor(model => model.Author.username)">@Html.DisplayFor(model => model.Author.username)</a></p>
            <hr>
            <p style="word-wrap: break-word">@Html.DisplayFor(model => model.text)</p>
        </div>
    </div>
<br>
<hr>
<h3>Discussions</h3>
@foreach (var i in ViewBag.Discussies)
{
<div>
    <div class="alert alert-secondary mt-0" style="border-radius: 0px; border-color:white;">
        <img src="@i.Author.icon" style="width:100px; height:100px;" />
        <p>@i.pubdate - <a href="/Account/?name=@i.Author.username">@i.Author.username</a></p>
        <hr>
        <p style="word-wrap: break-word">@i.text</p>
    </div>
</div>
}


<div class="row">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="col-md-4">
            <form asp-action="Detail">
                <div class="form-group">
                    <textarea name="text" class="form-control" placeholder="Text" style="width: 100%; height: 150px;"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-outline-secondary" />
                </div>
            </form>
        </div>
    }
    else
    {
        <div class="col-md-4">
            <h4><a href="/Account/Login/" class="btn btn-outline-primary">Login to leave comments</a></h4>
        </div>
    }<br>
</div>

